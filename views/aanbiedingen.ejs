<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bier aanbiedingen</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body background="/images/pils.png">
    <div class="container">
      <fieldset>
        <form action="/aanbiedingen" method="post" onsubmit="submitBtn.disabled = true">
          <input name="merk" type="text" class="ghost-input" placeholder="Enter een merk" minlength="3" required>
          <input type="submit" class="ghost-button-aanbiedingen" value="Aanbiedingen" name = "submitBtn">
        </form>
        <table>
          <tr>
            <th>Merk</th><th>Winkel</th><th>prijsOud</th><th>prijsNieuw</th><th>hoeveelheid</th>
          </tr>
        
          <% for (var i = 0; i < pilsDataResponse.length; i++) { %>
            <tr>
              <td><%= pilsDataResponse[i].merk %></td>
              <td><%= pilsDataResponse[i].winkel %></td>
              <td><%= pilsDataResponse[i].prijsOud %></td>
              <td><%= pilsDataResponse[i].prijsNieuw %></td>
              <td><%= pilsDataResponse[i].hoeveelheid %></td>
            </tr>    
          <% } %>
        </table>        
      </fieldset>
    </div>
  </body>
</html>

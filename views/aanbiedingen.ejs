    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300" type="text/css">
  </head>
    <div class="container">
      <fieldset>
        <form action="/aanbiedingen" method="post" onsubmit="submitBtn.disabled = true">
          <input name="merk" type="text" class="ghost-input" placeholder="Enter een merk" minlength="3" required>
          <input type="submit" class="ghost-button-aanbiedingen" value="Aanbiedingen" name = "submitBtn">
        </form>
        <table>
          <tr>
            <th>Merk</th><th>Winkel</th><th>prijsOud</th><th>prijsNieuw</th><th>hoeveelheid</th>
          </tr>

          <% for (var i = 0; i < pilsDataResponse.length; i++) { %>
            <tr>
              <td><%= pilsDataResponse[i].brand %></td>
              <td><%= pilsDataResponse[i].store %></td>
              <td><%= pilsDataResponse[i].oldPrice %></td>
              <td><%= pilsDataResponse[i].newPrice %></td>
              <td><%= pilsDataResponse[i].volume %></td>
            </tr>
          <% } %>
        </table>

